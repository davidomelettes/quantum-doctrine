<?php

use Omelettes\Tabulatable;

$mock = $this->mock;
$data = $this->data;
$colspan = count($mock->getTableHeadings());

?>
<form action="<?php echo $this->url(null, array('action' => 'process')); ?>">
    <table class="table">
        <thead>
            <tr>
                <?php if ($mock instanceof Tabulatable\TabulatableItemInterface): ?>
                    <th>
                    </th>
                    <?php foreach ($mock->getTableHeadings() as $property => $heading): ?>
                    <th><?php echo $this->escapeHtml($heading); ?></th>
                    <?php endforeach; ?>
                <?php endif; ?>
            </tr>
        </thead>
        <tbody>
            <?php if (count($data) < 1): ?>
            <tr>
                <td></td>
                <td colspan="<?php echo $colspan; ?>">
                    <em><?php echo $this->translate('No results'); ?></em>
                </td>
            </tr>
            <?php endif; ?>
            <?php foreach ($data as $datum): ?>
            <?php if ($datum instanceof Tabulatable\TabulatableItemInterface): ?>
            <tr>
                <td>
                    <input type="checkbox" name="ids[]" value="<?php echo $datum->getId(); ?>">
                </td>
                <?php echo $this->partial($datum->getTableRowPartial(), array('item' => $datum)); ?>
            </tr>
            <?php endif; ?>
            <?php endforeach; ?>
        </tbody>
    </table>
</form>
